CREATE SCHEMA app_camisas;

CREATE TABLE camisas(
    id INT UNSIGNED NOT NULL AUTO_INCREMENT,
    modelo VARCHAR(50) NOT NULL,
	tamanho VARCHAR(50) NOT NULL,
    preco FLOAT UNSIGNED NOT NULL,
    PRIMARY KEY (id)
);

